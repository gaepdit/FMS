@page
@model UserSearchModel
@{
    ViewData["Title"] = "User Search";
}
<div class="text-center">
    <h5>User Administration</h5>
    <div class="container-fluid">
        <h4>Search for User</h4>
        @using (Html.BeginForm(FormMethod.Post))
        {
            <div class="form-row justify-content-center">
                <div class="col-5">
                    <div class="input-group input-group">
                        <input id="FileID" type="text" class="form-control" placeholder="Enter the Name of a User to Search (Real Name)" aria-describedby="basic-addon1">
                    </div>
                </div>
            </div>
            <br />
            <div class="form-row justify-content-center">
                <div class="col-2">
                    <button id="UserSearch" type="submit" class="btn btn-primary mb-5">Search for User</button>
                </div>
            </div>
        }
    </div>
</div>