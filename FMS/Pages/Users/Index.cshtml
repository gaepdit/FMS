@page
@model Pages.Users.IndexModel
@{
    ViewData["Title"] = "User Admin";
}

<h1>User Admin</h1>

<div class="container-fluid bg-light py-3">
    @using (Html.BeginForm(FormMethod.Post))
    {
        <div class="form-row justify-content-center">
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.Name)
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "First or last name" } })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.Email)
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Whole or partial email" } })
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    }
</div>

@if (Model.SearchResults != null && Model.SearchResults.Count > 0)
{
    <table class="table table-borderless">
        <thead class="thead-light">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model.SearchResults)
            {
            <tr>
                <td>@u.Name</td>
                <td>@u.Email</td>
                <td><a class="btn btn-outline-dark btn-sm" href="/Users/Edit/@u.Id.ToString()">Edit</a></td>
            </tr>
            }
        </tbody>
    </table>
}