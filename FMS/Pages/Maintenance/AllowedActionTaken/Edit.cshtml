@page "{id:Guid?}"
@using FMS.Pages.Maintenance
@model FMS.Pages.Maintenance.AllowedActionTaken.EditModel

@section Scripts {
    <script src="~/js/formIndex.js"></script>
}

@{
    ViewData["Title"] = $"Site Maintenance: {MaintenanceOptions.AllowedActionTaken} for {Model.EventTypeName}";
}

<a asp-page="./Index">← Back</a>
<h2>
    @ViewData["Title"]
</h2>
<partial name="_AlertPartial" for="DisplayMessage" id="alert" />

<form method="post">
    <table class="table" aria-label="List of Actions Taken codes">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="col-md-4">Action Name</th>
                <th scope="col" class="col-md-3 text-center">Action Active</th>
                <th scope="col" class="col-md-3 text-center">Allowed Action Active</th>
                <th scope="col" class="col-md-2 text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AllowedActionsTakenList)
            {
                <tr>
                    <td class="text-nowrap">@Html.DisplayFor(m => item.ActionTakenName)</td>
                    <td class="@(!item.ActionTakenActive ? "table-info" : "") text-center">@Html.DisplayFor(m => item.ActionTakenActive)</td>
                    <td class="@(!item.Active ? "table-warning" : "") text-center">@Html.DisplayFor(m => item.Active)</td>
                    <td class="text-nowrap text-center">
                        @if (item.Active)
                        {
                            <button type="submit" name="actionTakenId" value="@item.ActionTakenId" class="btn btn-outline-danger btn-sm">Delete from list</button>
                        }
                        else
                        {
                            <button type="submit" name="actionTakenId" value="@item.ActionTakenId" class="btn btn-outline-primary btn-sm">Add to list</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>