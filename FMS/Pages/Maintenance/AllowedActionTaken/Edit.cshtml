@page "{id:Guid?}"
@using FMS.Pages.Maintenance
@model FMS.Pages.Maintenance.AllowedActionTaken.EditModel

@section Scripts {
    <script src="~/js/formIndex.js"></script>
}

@{
    ViewData["Title"] = $"Site Maintenance: {MaintenanceOptions.EventsActionTaken}";
}

<a asp-page="/AllowedActionsTaken/Index">← Back</a>
<h1>
    @MaintenanceOptions.AllowedActionsTaken 
</h1>
<partial name="_AlertPartial" for="DisplayMessage" id="alert" />

<form method="post">
    <table class="table" aria-label="List of Actions Taken codes">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="col-md-6">Name</th>
                <th scope="col" class="col-md-6">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AllowedActionsTaken)
            {
                <tr class="@(!item.Active ? "table-warning" : "")">
                    <td class="text-nowrap">
                        @Html.DisplayFor(m => item.ActionTaken.Name, "StringOrNone")
                        @Html.DisplayFor(m => item.Active, "BoolRemoved")
                    </td>
                    <td class="text-nowrap">
                        @if (item.Active)
                        {
                            <button type="submit" name="itemId" value="@item.Id" class="btn btn-outline-warning btn-sm">Remove from list</button>
                        }
                        else
                        {
                            <button type="submit" name="itemId" value="@item.Id" class="btn btn-outline-warning btn-sm">Restore to list</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>