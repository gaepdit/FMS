@page "{id:Guid?}"
@using FMS.Pages.Maintenance
@model FMS.Pages.Maintenance.ContactTitle.EditModel

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@{
    ViewData["Title"] = $"Edit {MaintenanceOptions.ContactType}: {Model.ContactTitle.Name}";
}
<h1>
    @ViewData["Title"]
    @if (!Model.ContactTitle.Active)
    {
        <span class="text-muted">(Removed)</span>
    }
</h1>

<div class="container bg-light-subtle py-3 rounded-3">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <input type="hidden" asp-for="ContactTitle.Active" />
        <input type="hidden" asp-for="Id" />
        <div class="row mb-3">
            <div class="col-md-10">
                <label asp-for="ContactTitle.Name">@MaintenanceOptions.ContactTitle Name <span class="text-danger">*</span></label>
                <input asp-for="ContactTitle.Name" class="form-control" />
                <span asp-validation-for="ContactTitle.Name" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <p class="text-danger">* denotes a required field</p>
        <button type="submit" class="btn btn-primary col-sm-3 mb-3 mb-sm-0">Save Changes</button>
        <a asp-page="Index" class="btn btn-outline-secondary col-md-2" asp-route-handler="select"
           asp-route-MaintenanceSelection="@MaintenanceOptions.ContactTitle">
            Cancel
        </a>
    </form>
</div>
}
