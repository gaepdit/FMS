@page
@using FMS.Pages.Reporting.AssignmentList
@model FMS.Pages.Reporting.AssignmentList.IndexModel

@{
    ViewData["Title"] = $"Assignment List Reports";
}
<h1>@ViewData["Title"]</h1>
<a asp-page="../Index">← Back to Reports</a>
<hr />
<p class="lead">Select a Report from the list</p>
<form method="post">
    <div class="row">
        <div class="col-md-4">
            <button id="ByCO"
                    asp-page-handler="ByCO"
                    class="btn btn-sm btn-outline-primary mb-1">
                Report
            </button>
            Assignment Report By CO
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <button id="ByCounty"
                    asp-page-handler="ByCounty"
                    class="btn btn-sm btn-outline-primary mb-1">
                Report
            </button>
            Assignment Report By County
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <button id="ByHSI"
                    asp-page-handler="ByHSI"
                    class="btn btn-sm btn-outline-primary mb-1">
                Report
            </button>
            Assignment Report By HSI
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <button id="BySiteName"
                    asp-page-handler="BySiteName"
                    class="btn btn-sm btn-outline-primary mb-1">
                Report
            </button>
            Assignment Report By Site Name
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <button id="ByUnit"
                    asp-page-handler="ByUnit"
                    class="btn btn-sm btn-outline-primary mb-1">
                Report
            </button>
            Assignment Report By Unit
        </div>
    </div>
</form>