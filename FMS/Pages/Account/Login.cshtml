@page
@model Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

@if (Model.LoggedOut)
{
    <div class="alert alert-success" role="alert">
        You have successfully logged out.
    </div>
}

<h1>Sign in using your work account</h1>

<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    <button type="submit" class="btn btn-lg btn-outline-primary btn-img my-3 py-3 px-4" title="Sign in using your work account">
        <img src="~/graphics/ms-symbol.svg" alt="" /> Sign in
    </button>
</form>
