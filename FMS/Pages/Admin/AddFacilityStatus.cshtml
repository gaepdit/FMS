@page
@model FMS.Pages.Admin.AddFacilityStatusModel
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@{
    ViewData["Title"] = $"Add Facility Status";
}
<h1>@ViewData["Title"]</h1>
<div class="container-fluid bg-light py-3">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <div class="form-row">
            <input type="hidden" asp-for="FacilityStatus.Active" />
            <div class="form-group col-md-10">
                <label>Facility Status Name <span class="text-danger">*</span></label>
                <input asp-for="FacilityStatus.Status" class="form-control" />
                <span asp-validation-for="FacilityStatus.Status" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="form-row">
            <div class="col">
                <p class="text-danger">* denotes a required field</p>
                <button id="SubmitButton" type="submit" class="btn btn-primary col-md-3">Add New Facility Status</button>
                <a asp-page="Index" class="btn btn-outline-secondary col-md-2">Cancel</a>
            </div>
        </div>
    </form>
</div>