@page "{id:Guid?}"
@model FMS.Pages.Admin.EditFacilityStatusModel
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@{
    ViewData["Title"] = $"Edit Facility Status: {Model.FacilityStatus.Status}";
}
<h1>
    @ViewData["Title"]
    @if (!Model.FacilityStatus.Active)
    {
        <span class="text-muted">(Deleted)</span>
    }
</h1>
<hr />
<div class="container-fluid">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <input type="hidden" asp-for="FacilityStatus.Active" />
        <input type="hidden" asp-for="Id" />
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Budget Code <span class="text-danger">*</span></label>
                <input asp-for="FacilityStatus.Status" class="form-control" aria-describedby="FileIdHelpBlock" />
                <span asp-validation-for="FacilityStatus.Status" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="form-row">
            <div class="col">
                <p class="text-danger">* denotes a required field</p>
                <button type="submit" class="btn btn-primary col-md-2">Save Changes</button>
                <a asp-page="Index" class="btn btn-outline-secondary col-md-2">Cancel</a>
            </div>
        </div>
    </form>
</div>