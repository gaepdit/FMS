@page
@model FMS.Pages.Event.DeleteModel

@{
    ViewData["Title"] = $"Delete Event";
}

<h1><em>Confirm</em> @ViewData["Title"]</h1>
<form method="post">
    <p class="lead text-danger font-weight-medium">Are you sure you want to delete this Event?</p>
    <div class="row justify-content-evenly">
        <table class="table table-sm" aria-label="Events">
            <thead class="thead-light">
                <tr>
                    <th scope="col" class="text-nowrap">Event Type</th>
                    <th scope="col" class="text-nowrap">Action Taken</th>
                    <th scope="col" class="text-nowrap">Start Date</th>
                    <th scope="col" class="text-nowrap">Due Date</th>
                    <th scope="col" class="text-nowrap">Completion Date</th>
                    <th scope="col" class="text-nowrap">Done By</th>
                    <th scope="col" class="text-nowrap">Event Amount</th>
                    <th scope="col" class="text-nowrap">Contractor</th>
                    <th scope="col" class="text-nowrap">Comment</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.EventDetail.EventType.Name</td>
                    <td>@Model.EventDetail.ActionTaken.Name</td>
                    <td>@Model.EventDetail.StartDate</td>
                    <td>@Model.EventDetail.DueDate</td>
                    <td>@Model.EventDetail.CompletionDate</td>
                    <td>@Model.EventDetail.ComplianceOfficer.Name</td>
                    <td style="text-align:right">@Html.DisplayFor(m => Model.EventDetail.EventAmount)</td>
                    <td>@Model.EventDetail.EventContractor?.Name</td>
                    <td>@Model.EventDetail.Comment</td>
                </tr>
            </tbody>
        </table>
    </div>
    <input type="hidden" asp-for="EventDetail.Id" />
    <input type="hidden" asp-for="@Model.FacilityId" />
    <button type="submit" class="btn btn-primary col-sm-4 col-md-3 mb-3 mb-sm-0">Confirm Delete</button>
    <a asp-page="../Facilities/Details" 
        asp-route-Id="@Model.FacilityId" 
        asp-route-tab="Events"
        asp-fragment="TabPages"
        class="btn btn-outline-secondary col-md-2">
        Cancel
    </a>
</form>