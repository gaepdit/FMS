@page "{id:Guid?}"
@using FMS.Pages.Contact
@using FMS.Domain.Entities.Users
@model FMS.Pages.Contact.AddModel

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

@{
    ViewData["Title"] = "Add Contact";
}
<h1>@ViewData["Title"]</h1>
<div class="container bg-light-subtle py-3 rounded-3">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <input type="hidden" asp-for="NewContact.FacilityId" />
        <input type="hidden" asp-for="NewContact.Id" />
        <input type="hidden" asp-for="NewContact.Active" />
        <div class="row">
            <div class="col">
                <label asp-for="NewContact.GivenName"></label>
                <input asp-for="NewContact.GivenName" class="form-control" />
                <span asp-validation-for="NewContact.GivenName" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="NewContact.FamilyName">Last Name <span class="text-danger">*</span></label>
                <input asp-for="NewContact.FamilyName" class="form-control" />
                <span asp-validation-for="NewContact.FamilyName" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label asp-for="NewContact.Company"></label>
                <input asp-for="NewContact.Company" class="form-control" />
                <span asp-validation-for="NewContact.Company" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="NewContact.ContactTypeId"></label>
                <select asp-for="NewContact.ContactTypeId" asp-items="Model.ContactTypes" class="form-select">
                    <option value=""></option>
                </select>
                <span asp-validation-for="NewContact.ContactTypeId" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="NewContact.ContactTitle"></label>
                <input asp-for="NewContact.ContactTitle" class="form-control" />
                <span asp-validation-for="NewContact.ContactTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label asp-for="NewContact.Address"></label>
                <input asp-for="NewContact.Address" class="form-control" />
                <span asp-validation-for="NewContact.Address" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label asp-for="NewContact.City"></label>
                <input asp-for="NewContact.City" class="form-control" />
                <span asp-validation-for="NewContact.City" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="NewContact.State"></label>
                <select asp-for="NewContact.State" asp-items="AddModel.States" class="form-select">
                    <option value="Georgia">Georgia</option>
                </select>
                <span asp-validation-for="NewContact.State" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="NewContact.PostalCode"></label>
                <input asp-for="NewContact.PostalCode" class="form-control" />
                <span asp-validation-for="NewContact.PostalCode" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label asp-for="NewContact.Email"></label>
                <input asp-for="NewContact.Email" class="form-control" />
                <span asp-validation-for="NewContact.Email" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <p class="text-danger">* denotes a required field</p>
        <button type="submit" class="btn btn-primary col-sm-4 col-md-3 mb-3 mb-sm-0">
            Create New Contact
        </button>
        <a asp-page="../Facilities/Details" 
            asp-route-Id="@Model.NewContact.FacilityId"
            asp-route-tab="Contacts"
            class="btn btn-outline-secondary col-md-2">
            Cancel
        </a>
    </form>
</div>
