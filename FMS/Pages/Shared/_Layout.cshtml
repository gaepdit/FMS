<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FMS - @ViewData["Title"]</title>
    <partial name="_FaviconPartial" />
    <link rel="stylesheet" href="~/dist/site.css" asp-append-version="true" />
    <partial name="_RaygunScriptsPartial" />
    <script src="~/dist/site.bundle.js" asp-append-version="true" type="text/javascript" defer></script>
    @await RenderSectionAsync("ScriptFiles", required: false)
</head>
<body>
<environment exclude="Production">
    <div class="banner-test-site">
        Test Site
    </div>
</environment>
<a class="skipnav" href="#main-content">Skip to main content</a>
<header role="banner">
    <div class="container h3 my-2">
        <img src="~/images/epd-icon.svg" alt="Georgia EPD" class="img-logo" />
        <a href="/" aria-label="Home" class="text-dark">File Management System</a>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <partial name="_MenuPartial" />
    }
</header>
<div class="container">
    <main id="main-content" role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer">
    <div class="container text-brand">
        <a href="#">Return to top</a>
    </div>
    <div class="bg-brand text-light">
        <div class="container">
            &copy; @DateTime.Now.Year Environmental Protection Division IT -
            <a href="https://georgia.gov/accessibility" target="_blank">Accessibility</a> |
            <a href="https://gadnr.org/ada" target="_blank">DNR Accessibility Notice</a> |
            <a href="https://georgia.gov/privacysecurity" target="_blank">Privacy/Security</a>
        </div>
    </div>
</footer>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>