@page
@model Pages.Facilities.IndexModel
@{
    ViewData["Title"] = "Facility Search";
}
@section Scripts {
    <partial name="_SearchFormScriptsPartial" />
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="container-fluid">
    <form method="get" asp-fragment="SearchResults">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="Spec.FileId"></label>
                <select asp-for="Spec.FileId" asp-items="Model.Files" class="custom-select">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Spec.FacilityNumber"></label>
                <input asp-for="Spec.FacilityNumber" class="form-control" />
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Spec.FacilityTypeId"></label>
                <select asp-for="Spec.FacilityTypeId" asp-items="Model.FacilityTypes" class="custom-select">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Spec.OrganizationalUnitId"></label>
                <select asp-for="Spec.OrganizationalUnitId" asp-items="Model.OrganizationalUnits" class="custom-select">
                    <option value=""></option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="Spec.ComplianceOfficerId"></label>
                <select asp-for="Spec.ComplianceOfficerId" asp-items="Model.ComplianceOfficers" class="custom-select">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Spec.BudgetCodeId"></label>
                <select asp-for="Spec.BudgetCodeId" asp-items="Model.BudgetCodes" class="custom-select">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Spec.EnvironmentalInterestId"></label>
                <select asp-for="Spec.EnvironmentalInterestId" asp-items="Model.EnvironmentalInterests" class="custom-select">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Spec.FacilityStatusId"></label>
                <select asp-for="Spec.FacilityStatusId" asp-items="Model.FacilityStatuses" class="custom-select">
                    <option value=""></option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Spec.Name"></label>
                <input asp-for="Spec.Name" class="form-control" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Spec.Address"></label>
                <input asp-for="Spec.Address" class="form-control" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Spec.City"></label>
                <input asp-for="Spec.City" class="form-control" />
            </div>
            <div class="form-group col">
                <label asp-for="Spec.CountyId"></label>
                <select asp-for="Spec.CountyId" asp-items="Model.Counties" class="custom-select">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group col">
                <label asp-for="Spec.State"></label>
                <select asp-for="Spec.State" class="custom-select">
                    <option value="AL">Alabama</option>
                    <option value="AK">Alaska</option>
                    <option value="AZ">Arizona</option>
                    <option value="AR">Arkansas</option>
                    <option value="CA">California</option>
                    <option value="CO">Colorado</option>
                    <option value="CT">Connecticut</option>
                    <option value="DE">Delaware</option>
                    <option value="DC">District of Columbia</option>
                    <option value="FL">Florida</option>
                    <option selected value="GA">Georgia</option>
                    <option value="HI">Hawaii</option>
                    <option value="ID">Idaho</option>
                    <option value="IL">Illinois</option>
                    <option value="IN">Indiana</option>
                    <option value="IA">Iowa</option>
                    <option value="KS">Kansas</option>
                    <option value="KY">Kentucky</option>
                    <option value="LA">Louisiana</option>
                    <option value="ME">Maine</option>
                    <option value="MD">Maryland</option>
                    <option value="MA">Massachusetts</option>
                    <option value="MI">Michigan</option>
                    <option value="MN">Minnesota</option>
                    <option value="MS">Mississippi</option>
                    <option value="MO">Missouri</option>
                    <option value="MT">Montana</option>
                    <option value="NE">Nebraska</option>
                    <option value="NV">Nevada</option>
                    <option value="NH">New Hampshire</option>
                    <option value="NJ">New Jersey</option>
                    <option value="NM">New Mexico</option>
                    <option value="NY">New York</option>
                    <option value="NC">North Carolina</option>
                    <option value="ND">North Dakota</option>
                    <option value="OH">Ohio</option>
                    <option value="OK">Oklahoma</option>
                    <option value="OR">Oregon</option>
                    <option value="PA">Pennsylvania</option>
                    <option value="RI">Rhode Island</option>
                    <option value="SC">South Carolina</option>
                    <option value="SD">South Dakota</option>
                    <option value="TN">Tennessee</option>
                    <option value="TX">Texas</option>
                    <option value="UT">Utah</option>
                    <option value="VT">Vermont</option>
                    <option value="VA">Virginia</option>
                    <option value="WA">Washington</option>
                    <option value="WV">West Virginia</option>
                    <option value="WI">Wisconsin</option>
                    <option value="WY">Wyoming</option>
                </select>
            </div>
            <div class="form-group col">
                <label asp-for="Spec.PostalCode"></label>
                <input asp-for="Spec.PostalCode" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group col">
                <div class="form-check">
                    <label class="form-check-label" asp-for="ActiveOnly">Show Active Sites Only</label>
                    <input asp-for="ActiveOnly" />
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col">
                <input type="hidden" name="handler" value="search" />
                <button id="SearchButton" type="submit" class="btn btn-primary mb-2">Search</button>
                <a asp-page="#" class="btn btn-outline-secondary mb-2">Clear Form</a>
            </div>
        </div>
    </form>
</div>
<hr />
<a name="SearchResults"></a>
@if (Model.ActiveOnly)
{
    <div class="container-fluid text-center">
        <h5 style="color:red">Only Active Sites are being displayed</h5>
    </div>
}
@if (Model.ShowNone)
{
    <div class="container-fluid text-center">
        <h5 style="color:red">Search Found No Matching Facilities</h5>
    </div>
}
@if (Model.ShowResults)
{
    <div class="text-center">
        <h4>Search Results</h4>
    </div>
    <div id="ResultList">
        <div class="container-fluid">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Spec.FacilityNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Spec.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Spec.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Spec.City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Spec.State)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Spec.PostalCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Spec.Active)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ShowResults)
                    {
                        @foreach (var item in Model.FacilityList)
                        {
                            if (Model.ActiveOnly)
                            {
                                if (item.Active)
                                {
                                    <tr>
                                        <td>
                                            <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                                @Html.DisplayFor(modelItem => item.FacilityNumber)
                                            </a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.City)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.State)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PostalCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Active)
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td>
                                        <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                            @Html.DisplayFor(modelItem => item.FacilityNumber)
                                        </a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.City)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.State)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PostalCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Active)
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
}
