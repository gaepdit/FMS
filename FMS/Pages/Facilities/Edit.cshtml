@page
@model Pages.Facilities.EditModel
@{
    ViewData["Title"] = "Edit Facility";
}
<div class="text-center">
    <h4>Edit Facility</h4>
</div>
<div class="container-fluid">
    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.Hidden("FormGuid", Model.FormGuid, new { htmlAttributes = new { @class = "form-control" } })
    <div class="form-row" style="text-align:left">
        <div class="form-group col-md-3">
            <label for="FileID">File Label (File Id)</label>
            @Html.TextBox("FileID", Model.Facility.File, new { @name = "FileID", @class = "form-control", placeholder = "File Label (XXX-XXXX)" })
        </div>
        <div class="form-group col-md-3">
            <label for="FacilityID">Facility Number</label>
            @Html.TextBox("FacilityID", Model.Facility.FacilityNumber, new { @name = "FacilityID", @class = "form-control", placeholder = "Facility Number" })
        </div>
        <div class="form-group col-md-3">
            <label for="FacilityType">Facility Type (Program)</label>
            @Html.DropDownList("FacilityType", new SelectList(Model.FacilityTypes), "Select Facility Type ...", new { @name = "FacilityType", @class = "custom-select" })
        </div>
        <div class="form-group col-md-3">
            <label for="OrganizationalUnit">Organizational Unit</label>
            @Html.DropDownList("OrganizationalUnit", new SelectList(Model.OrganizationalUnits), "Select Organizational Unit ...", new { @name = "OrganizationalUnit", @class = "custom-select" })
        </div>
    </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="FacilityName">Facility Name</label>
                @Html.TextBox("FacilityName", Model.Facility.Name, new { @name = "FacilityName", @class = "form-control", placeholder = "Facility Name" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label for="ComplianceOfficer">Compliance Officer</label>
                @Html.DropDownList("ComplianceOfficer", new SelectList(Model.ComplianceOfficers), "Select Compliance Officer...", new { @name = "ComplianceOfficer", @class = "custom-select" })
            </div>
            <div class="form-group col-md-3">
                <label for="BudgetCode">Budget Code</label>
                @Html.DropDownList("BudgetCode", new SelectList(Model.BudgetCodes), "Select Budget Code...", new { @name = "BudgetCode", @class = "custom-select" })
            </div>
            <div class="form-group col-md-3">
                <label for="EnvironnmentalInterest">Environmental Interest</label>
                @Html.DropDownList("EnvironnmentalInterest", new SelectList(Model.EnvironmentalInterests), "Select EI Type...", new { @name = "EnvironnmentalInterest", @class = "custom-select" })
            </div>
            <div class="form-group col-md-3">
                <label for="FacilityStatus">Facility Status</label>
                @Html.DropDownList("FacilityStatus", new SelectList(Model.FacilityStatuses), "Select Facility Status...", new { @name = "FacilityStatus", @class = "custom-select" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="Location">Location Description</label>
                @Html.TextBox("Location", Model.Facility.Location, new { @name = "Location", @class = "form-control", @placeholder = "Description of Physical Location ..." })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="Street">Facility Street Address</label>
                @Html.TextBox("Street", Model.Facility.Address, new { @name = "Street", @class = "form-control", @placeholder = "Facility Street Address" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="City">City</label>
                @Html.TextBox("City", Model.Facility.City, new { @name = "City", @class = "form-control", @placeholder = "City" })
            </div>
            <div class="form-group col">
                <label for="County">County</label>
                @Html.DropDownList("County", new SelectList(Model.Counties), "Select County...", new { @name = "County", @class = "custom-select" })
            </div>
            <div class="col">
                <label for="State">State</label>
                <select class="custom-select" name="State">
                    <option value=""></option>
                    <option value="AL">Alabama</option>
                    <option value="AK">Alaska</option>
                    <option value="AZ">Arizona</option>
                    <option value="AR">Arkansas</option>
                    <option value="CA">California</option>
                    <option value="CO">Colorado</option>
                    <option value="CT">Connecticut</option>
                    <option value="DE">Delaware</option>
                    <option value="DC">District of Columbia</option>
                    <option value="FL">Florida</option>
                    <option selected value="GA">Georgia</option>
                    <option value="HI">Hawaii</option>
                    <option value="ID">Idaho</option>
                    <option value="IL">Illinois</option>
                    <option value="IN">Indiana</option>
                    <option value="IA">Iowa</option>
                    <option value="KS">Kansas</option>
                    <option value="KY">Kentucky</option>
                    <option value="LA">Louisiana</option>
                    <option value="ME">Maine</option>
                    <option value="MD">Maryland</option>
                    <option value="MA">Massachusetts</option>
                    <option value="MI">Michigan</option>
                    <option value="MN">Minnesota</option>
                    <option value="MS">Mississippi</option>
                    <option value="MO">Missouri</option>
                    <option value="MT">Montana</option>
                    <option value="NE">Nebraska</option>
                    <option value="NV">Nevada</option>
                    <option value="NH">New Hampshire</option>
                    <option value="NJ">New Jersey</option>
                    <option value="NM">New Mexico</option>
                    <option value="NY">New York</option>
                    <option value="NC">North Carolina</option>
                    <option value="ND">North Dakota</option>
                    <option value="OH">Ohio</option>
                    <option value="OK">Oklahoma</option>
                    <option value="OR">Oregon</option>
                    <option value="PA">Pennsylvania</option>
                    <option value="RI">Rhode Island</option>
                    <option value="SC">South Carolina</option>
                    <option value="SD">South Dakota</option>
                    <option value="TN">Tennessee</option>
                    <option value="TX">Texas</option>
                    <option value="UT">Utah</option>
                    <option value="VT">Vermont</option>
                    <option value="VA">Virginia</option>
                    <option value="WA">Washington</option>
                    <option value="WV">West Virginia</option>
                    <option value="WI">Wisconsin</option>
                    <option value="WY">Wyoming</option>
                </select>
            </div>
            <div class="col">
                <label for="ZipCode">Zip Code</label>
                @Html.TextBox("ZipCode", Model.Facility.PostalCode, new { @name = "ZipCode", @class = "form-control", @placeholder = "Zip Code" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Latitude">Latitude</label>
                @Html.TextBox("Latitude", Model.Facility.Latitude, new { @name = "Latitude", @class = "form-control", @placeholder = "Decimal Format DD.DDDDDDD" })
            </div>
            <div class="form-group col-md-6">
                <label for="Longitude">Longitude</label>
                @Html.TextBox("Longitude", Model.Facility.Longitude, new { @name = "Longitude", @class = "form-control", @placeholder = "Decimal Format DD.DDDDDDD" })
            </div>
        </div>
        <div class="form-row">
            <div class="col text-center">
                <div class="form-check">
                    <label class="form-check-label" for="FacilityActive">Is Site Active?</label>
                    @Html.CheckBoxFor(m => m.FacilityActive, new { name = "FacilityActive" })
                </div>
            </div>
            <div class="col text-center">
                <button name="btnSave" type="submit" class="btn btn-primary mb-2">Save Facility</button>
            </div>
        </div>
    }
</div>
