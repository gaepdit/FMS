@page
@model Pages.Facilities.IndexMapModel
@{
    ViewData["Title"] = "Search Facilities By Address";
}
@section Scripts {
    <partial name="_MapSearchScriptsPartial" />
}
<div class="text-center">
    <h4><b>Search a Location</b></h4>
    <label>(See what's near any address)</label>
</div>
<div class="container-fluid">
    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-12">
                <b> <label asp-for="Spec.Address"></label></b>
                <input asp-for="Spec.Address" class="form-control" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <b><label asp-for="Spec.City"></label></b>
                <input asp-for="Spec.City" class="form-control" />
            </div>
            <div class="col">
                <b><label asp-for="Spec.State"></label></b>
                <select asp-for="Spec.State" asp-items="Model.States" class="custom-select">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group col">
                <b><label asp-for="Spec.PostalCode"></label></b>
                <input asp-for="Spec.PostalCode" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-3">
                <b><label asp-for="Spec.Radius"></label></b>
                <select asp-for="Spec.Radius" class="custom-select">
                    <option selected value="1">1/4 Mile (default)</option>
                    <option value="2">1/2 Mile</option>
                    <option value="3">1 Mile</option>
                    <option value="4">3 Miles</option>
                    <option value="5">5 Miles</option>
                </select>
            </div>
            <div class="form-group col">
                <b><label asp-for="Spec.Latitude"></label></b>
                <input asp-for="Spec.Latitude" class="form-control" placeholder="0.000000  Example: 33.748550" />
            </div>
            <div class="form-group col">
                <b><label asp-for="Spec.Longitude"></label></b>
                <input asp-for="Spec.Longitude" class="form-control" placeholder="-0.000000  Example: -84.391502" />
            </div>
            <div class="col-md-3">
                <b><label class="form-check-label" asp-for="ShowResults">Output</label></b>
                @*<input asp-for="ShowResults" />*@
                <select asp-for="ShowResults" class="custom-select">
                    <option selected value="1">Map</option>
                    <option value="2">Table</option>
                </select>
            </div>
        </div>
        <div class="form-group row">

            <div class="form-group col">
                <div class="form-check">
                    <label class="form-check-label" asp-for="ActiveOnly">Show Active Sites Only</label>
                    <input asp-for="ActiveOnly" />
                </div>
            </div>
        </div>
        <br />
        <div class="form-row">
            <div class="col" style="text-align:center;">
                <button id="Search" type="submit" class="btn btn-primary mb-2" style="text-align: center;width:100px; height:38px; margin-right:30px; line-height:1.1em; font-size:1.1em;">Search</button>
                <a asp-page="./Index" class="btn btn-primary mb-2">Clear Form</a>
            </div>
        </div>
    </form>
</div>
<hr />
@if (Model.ActiveOnly)
{
    <div class="container-fluid text-center">
        <h5 style="color:red">Only Active Sites are being displayed</h5>
    </div>
    <hr />
}
@if (Model.ShowMap)
{
    <div class="container-fluid text-center">
        @*Map HTML in this div*@
        <h4>Map of results here</h4>
        <img src="~/graphics/GOOGLEMAP.jpg" alt="Results Map" width="500" height="300" />
    </div>
}
@if (Model.ShowNone)
{
    <div class="container-fluid text-center">
        <h5 style="color:red">Search Found No Matching Facilities</h5>
    </div>
}
@if (Model.ShowResults)
{
    <hr />
    <div class="text-center">
        <h4>Search Results</h4>
    </div>
    <div id="ResultList">
        <div class="container-fluid">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Spec.FacilityNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Spec.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Spec.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Spec.City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Spec.State)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Spec.PostalCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Spec.Active)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ShowResults)
                    {
                        @foreach (var item in Model.FacilityList)
                        {
                            if (Model.ActiveOnly)
                            {
                                if (item.Active)
                                {
                                    <tr>
                                        <td>
                                            <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                                @Html.DisplayFor(modelItem => item.FacilityNumber)
                                            </a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.City)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.State)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PostalCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Active)
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td>
                                        <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                            @Html.DisplayFor(modelItem => item.FacilityNumber)
                                        </a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.City)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.State)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PostalCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Active)
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
}


