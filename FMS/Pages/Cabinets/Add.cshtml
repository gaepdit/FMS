@page
@model FMS.Pages.Cabinets.AddModel

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@{
    ViewData["Title"] = "Confirm New Cabinet";
}
<h1>@ViewData["Title"]</h1>
<div class="container bg-light py-3">
    <form method="post">
        <p class="mt-2 mb-4">
            Cabinet <span class="border border-secondary rounded px-2 py-1">@Model.NewCabinetName</span> will be created.
        </p>
        <button type="submit" class="btn btn-primary col-sm-4 col-md-3 mb-3 mb-sm-0">Save New Cabinet</button>
        <a asp-page="Index" class="btn btn-outline-secondary col-sm-3 col-md-2">Cancel</a>
    </form>
</div>