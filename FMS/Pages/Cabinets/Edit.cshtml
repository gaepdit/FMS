@page "{id:Guid?}"
@model FMS.Pages.Cabinets.EditModel
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@{
    ViewData["Title"] = $"Edit Cabinet: {Model.CabinetEdit.Name}";
}
<h1>@ViewData["Title"]</h1>
<partial name="_AlertPartial" for="Message" />

<div class="container bg-light py-3">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="CabinetEdit.FirstFileLabel"></label>
                <input asp-for="CabinetEdit.FirstFileLabel" class="form-control" />
                <span asp-validation-for="CabinetEdit.FirstFileLabel" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="form-row">
            <div class="col">
                <button type="submit" class="btn btn-primary col-md-3">Save Changes</button>
                <a asp-page="Details" asp-route-id="@Model.CabinetEdit.Name" class="btn btn-outline-secondary col-md-2">Cancel</a>
            </div>
        </div>
    </form>
</div>