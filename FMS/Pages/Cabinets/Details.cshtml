@page "{name}"
@using FMS.Domain.Entities.Users
@model FMS.Pages.Cabinets.DetailsModel
@{
    ViewData["Title"] = $"Cabinet {Model.CabinetDetail.Name}";
}
<h1>
    @ViewData["Title"]
    @if (!Model.CabinetDetail.Active)
    {
        <span class="text-muted">(Deleted)</span>
    }
    @if (User.IsInRole(UserRoles.SiteMaintenance))
    {
        <a asp-page="Edit" asp-route-id="@Model.CabinetDetail.Id" class="btn btn-sm btn-outline-primary">Edit</a>
    }
</h1>
<hr />
<partial name="_AlertPartial" for="Message" />

<div class="container">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CabinetDetail.FirstFileLabel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CabinetDetail.FirstFileLabel)
        </dd>
    </dl>

    <h2>Files</h2>
    @if (Model.CabinetDetail.Files != null && Model.CabinetDetail.Files.Count > 0)
    {
        @foreach (var c in Model.CabinetDetail.Files)
        {
            <a asp-page="/Files/Details" asp-route-id="@c.FileLabel" class="btn btn-sm btn-outline-info m-1">@c.FileLabel</a>
        }
    }
    else
    {
        <p class="lead text-info">No Files found for this Cabinet.</p>
    }
</div>