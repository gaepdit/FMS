@page "{id}"
@model Pages.Cabinets.DetailsModel
@{
    ViewData["Title"] = $"Cabinet {Model.CabinetDetail.Name}";
}
<h1>
    @ViewData["Title"]
    @if (!Model.CabinetDetail.Active)
    {
        <span class="text-muted">(Inactive)</span>
    }
    @* TODO #38: Add authorize check in production *@
    <a asp-page="Edit" asp-route-id="@Model.CabinetDetail.Id" class="btn btn-sm btn-outline-primary">Edit</a>
</h1>
<hr />
<partial name="_AlertPartial" for="Message" />

<div class="container-fluid">
    <dl class="row">
        <dt class="col-md-3">
            @Html.DisplayNameFor(model => model.CabinetDetail.Active)
        </dt>
        <dd class="col-md-9">
            @Html.DisplayFor(model => model.CabinetDetail.Active)
        </dd>
    </dl>
</div>
